public class MadLibs {
    public static void main(String[] args){
        String name1 = "Alice";
        String name2 = "Sam";
        String adjective1 = "hopeful";
        String adjective2 = "beautiful";
        String adjective3 = "happy";
        String verb1 = "sing";
        String noun1 = "teenager";
        String noun2 = "lizards";
        String noun3 = "guitar";
        String noun4 = "musician";
        String noun5 = "syrup";
        String noun6 = "Zombie";
        String place1 = "Alaska";
        int number = 2050;

        String story = "This morning " + name1 + " woke up feeling " + adjective1 + ". It is going to be a " + adjective2
                + " day!' Outside, a bunch of " + noun1 + "s were protesting to keep " + noun2 + " in stores. They began to "
                + verb1 + " to the rhythm of the " + noun3 + ", which made all the " + noun4 + "s very " + adjective3 + ". Concerned, "
                + name1 + " texted " + name2 + ", who flew " + name1 + " to " + place1 + " and dropped " + name1 + " in a puddle of frozen "
                + noun5 + ". " + name1 + " woke up in the year " + number + ", in a world where " + noun6 + "s ruled the world.";

        System.out.println(story);
    }
}
